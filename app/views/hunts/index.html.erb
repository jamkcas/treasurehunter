      <input type = "button" id = "currentLocButton" value = "Click here for current location">

      <div id="coordinates">
        <form class='addLocation'>
          <input type='text' id='location_lat' placeholder='Latitude' />
          <input type='text' id='location_long' placeholder='Longitude' />
          <input type='text' id='location_name' placeholder='Location name' />
          <input type='text' id='clueQuestion' placeholder='Add a question...' />
          <input type='text' id='clueAnswer' placeholder='Add an answer...' />
          <input type='submit' />
        </form>
        <ul>

        </ul>
      </div> <!-- end coordinates -->

      <div id = "map-canvas" style="height: 200px">

      </div> <!-- end map-canvas -->

